@model ladders.Models.LadderModel


@{
    ViewData["Title"] = "Join";
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <strong class="card-title">Join Ladder @(Model.Name)</strong>
            </div>
            <div class="card-body">
                <h4>Do you want to join this ladder?</h4>

                <form asp-action="Join">

                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <input type="submit" value="Join" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>