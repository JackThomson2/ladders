@model LadderModel

@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">@(Model.Name) Ladder</strong>
                <a asp-action="Index">Back to List</a>
            </div>
            <div class="card-body">
                <div>
                    <h5>@(Model?.CurrentRankings?.Count ?? 0) members</h5>
                    <hr />
                    <div>
                        @if (ViewBag.IsAdmin)
                        {
                            <span><a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |</span>
                        }
                    </div>

                    <hr />

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Current Challenges</th>
                            </tr>
                            <tr>
                                <th>Challenger</th>
                                <th>Challenging</th>
                                <th>Challenged on</th>
                                <th>Event Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.ActiveChallenges != null)
                            {
                                foreach (Challenge item in ViewBag.ActiveChallenges)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Challenger.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Challengee.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Created)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ChallengedTime)
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <hr />

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Ladder</th>
                            </tr>
                            <tr>
                                <th>Name</th>
                                <th>Position</th>
                                <th>Wins</th>
                                <th>Draws</th>
                                <th>Losses</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.CurrentRankings != null)
                            {
                                foreach (var item in Model?.CurrentRankings.OrderByDescending(a => a.Position))
                                {
                                    if (item.User != null)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.User.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Position)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Wins)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Draws)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Losses)
                                            </td>
                                            <td>
                                                @if (ViewBag.Challengable != null && ViewBag.Challengable.ContainsKey(item.User.Name))
                                                {
                                                    <a href="@Url.Action("Create", "Challenges", new {userId = item.User.Id, ladderId = Model.Id})">Challenge</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


