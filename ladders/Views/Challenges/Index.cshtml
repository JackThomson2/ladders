@model IEnumerable<ladders.Models.Challenge>

@{
    ViewData["Title"] = "Index";
}

<h2>Outstanding Challenges</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Challenged At
            </th>
            <th>
                Challenge Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resolved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Challenge item in ViewBag.Challenged) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChallengedTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resolved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">View</a>
                @if (ViewBag.IsAdmin)
                {
                    <span>
                        | <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </span>
                }
            </td>
        </tr>
}
    </tbody>
</table>

<h2>Sent Challenges</h2>

<table class="table">
    <thead>
    <tr>
        <th>
            Challenged At
        </th>
