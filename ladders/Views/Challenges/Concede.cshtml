@model ladders.Models.Challenge

@{
    ViewData["Title"] = "Concede";
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <strong class="card-title">Concede Ladder Challenge</strong>
            </div>
            <div class="card-body">
                <div>
                    <h4>Are you sure you wish to concede?</h4>
                    <hr />
                    <h5>This will give the other user an automatic win.</h5>
                    <hr />

                    <form asp-action="ConcedeConfirm">
                        <input type="hidden" asp-for="Id" />
                        <a class="btn btn-success" asp-action="Index"></a>
                        <input class="btn btn-danger" type="submit" value="Concede" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>