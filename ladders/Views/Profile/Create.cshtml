@model ladders.Models.ProfileModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Create your Profile</strong>
                <a asp-action="Index">Back to List</a>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="UserId" type="hidden" />
                    <input asp-for="Name" type="hidden" />
                    <input asp-for="CurrentRanking" type="hidden" />

                    <div class="form-group">
                        <label asp-for="Availability" class="control-label"></label>
                        <input asp-for="Availability" class="form-control" />
                        <span asp-validation-for="Availability" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PreferredLocation" class="control-label"></label>
                        <input asp-for="PreferredLocation" class="form-control" />
                        <span asp-validation-for="PreferredLocation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
