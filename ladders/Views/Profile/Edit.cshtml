@model ladders.Models.ProfileModel

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Edit Profile</strong>
                <a asp-action="Index">Back to List</a>
            </div>
            <div class="card-body">
                <h4>ProfileModel</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <input asp-for="UserId" type="hidden" />
                            <input asp-for="Name" type="hidden" />/>
                            <input asp-for="CurrentRankingId" type="hidden" />
                            <input asp-for="ApprovalLadderId" type="hidden"/>

                            <div class="form-group">
                                <label asp-for="Availability" class="control-label"></label>
                                <input asp-for="Availability" class="form-control" />
                                <span asp-validation-for="Availability" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PreferredLocation" class="control-label"></label>
                                <input asp-for="PreferredLocation" class="form-control" />
                                <span asp-validation-for="PreferredLocation" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="Suspended" /> @Html.DisplayNameFor(model => model.Suspended)
                                    </label>
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
